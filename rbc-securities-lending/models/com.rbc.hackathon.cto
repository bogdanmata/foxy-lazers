 */
enum SecurityLandingContractStatus {
  o REQUESTED
  o ACCEPTED
  o ENDED  
  o EXPIRED
}

participant Bank identified by id {
  o String id
}

participant Borrower identified by id {
  o String id
}

abstract asset Instrument identified by id {
   o String id
  o String isin
  o String value
